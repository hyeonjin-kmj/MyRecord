<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/writing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/text_square"
    android:gravity="center"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/DayDay"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_gravity="start"
        android:fontFamily="@font/gyuris_handwriting"
        android:paddingTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:text="14 일"
        android:clickable="true"/>
    <TextView
        android:id="@+id/YearMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/gyuris_handwriting"
        android:textSize="15dp"
        tools:text="2023 9월"/>


    <ImageView
        android:id="@+id/feel_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/little_happy"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:contentDescription="오늘의 감정" />

    <EditText
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:id="@+id/today_emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온전해"
        android:inputType="text|textNoSuggestions"
        android:textSize="20dp"
        android:minHeight="48dp"
        android:textStyle="italic|bold"
        android:fontFamily="@font/gyuris_handwriting"
        android:background="@color/mainPale"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/content"
        tools:text="내용"
        android:minHeight="48dp"
        android:textSize="30dp"
        android:fontFamily="@font/gyuris_handwriting"
        android:background="@color/transparent"

        android:inputType="textMultiLine|textNoSuggestions"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center" />

</LinearLayout>